---
import { Image } from "astro:assets";

type Props = {
  href: string;
  listingTitle: string;
  listingImageSrc: string;
  height: number;
  width: number;
  class?: string;
};

const {
  href,
  listingTitle,
  listingImageSrc,
  height,
  width,
  class: className,
} = Astro.props;
---

<a
  href={href}
  aria-label={`Learn more about ${listingTitle}`}
  class="block group relative bg-black bg-opacity-10"
  class:list={className}
>
  <span
    class="text-center absolute z-10 inset-0 h-fit m-auto px-1 text-white opacity-0 transition-opacity group-hover:opacity-100"
  >
    {listingTitle}
  </span>
  <Image
    src={listingImageSrc}
    alt={listingTitle}
    width={width}
    height={height}
    class="group-hover:opacity-20 transition-opacity w-full"
  />
</a>
