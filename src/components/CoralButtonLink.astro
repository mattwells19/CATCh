---
type Props = {
  href: string;
  class?: string;
};

const { href, class: className } = Astro.props;
---

<a
  href={href}
  class:list={className}
  class="bg-coral hover:bg-[#B7433C] w-full lg:w-fit rounded-sm px-5 py-3 min-w-[260px] text-peach font-bold font-serif shadow-md text-xl flex items-center justify-center gap-3 transition-colors"
>
  <slot />
</a>
