---
type Props = {
  href: string;
  isSoldOut?: boolean;
  class?: string;
};

const { href, class: className, isSoldOut } = Astro.props;
---

<style>
  .sold_out {
    @apply bg-peach text-coral;
  }
</style>
<a
  href={href}
  class="bg-coral hover:bg-[#B7433C] w-full lg:w-fit rounded-sm px-5 py-3 min-w-[260px] text-peach font-bold font-serif shadow-md lg:text-xl flex items-center justify-center gap-3 transition-colors"
  class:list={[
    className,
    {
      sold_out: isSoldOut,
    },
  ]}
>
  {isSoldOut ? "SOLD OUT" : <slot />}
</a>
