---
import type { Show } from "~/api/getShows";
import UpcomingShowCard from "./UpcomingShowCard.astro";

type Props = {
  upcomingShows: Array<Show>;
};

const { upcomingShows } = Astro.props;
---

<ol class="grid lg:grid-cols-2 grid-cols-1 gap-4">
  {
    upcomingShows.map((show) => (
      <li>
        <UpcomingShowCard
          date={show.event_start}
          imageUrl={show.image}
          ticketsLink={show.listing_url}
          title={show.listing_title}
        />
      </li>
    ))
  }
</ol>
