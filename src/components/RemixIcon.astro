---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"svg"> & {
  icon: string;
  variant?: "fill" | "line";
};

const {
  icon,
  variant = "fill",
  width = "24",
  height = "24",
  fill = "currentColor",
  ...svgProps
} = Astro.props;
---

<svg
  viewBox="0 0 24 24"
  aria-hidden="true"
  height={height}
  width={width}
  fill={fill}
  {...svgProps}
>
  <use xlink:href={`/icons.svg#ri-${icon}-${variant}`}></use>
</svg>
