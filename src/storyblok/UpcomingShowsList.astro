---
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import type { UpcomingShowCardProps } from "./UpcomingShowCard.astro";

type Props = {
  blok: {
    shows: Array<UpcomingShowCardProps>;
  };
};

const { blok } = Astro.props;
---

<ol class="grid lg:grid-cols-4 sm:grid-cols-2 grid-cols-1 gap-4">
  {
    blok.shows.map((blok) => {
      return (
        <li>
          <StoryblokComponent blok={blok} />
        </li>
      );
    })
  }
</ol>
