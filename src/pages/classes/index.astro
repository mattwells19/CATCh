---
import RootLayout from "~/layouts/RootLayout.astro";
import PathwayCard from "./_components/PathwayCard.astro";
import UnlockingTheSelfImg from "~/images/class-pathways/unlocking-the-self.png";
import PerformanceTrackImg from "~/images/class-pathways/performance-track.png";
import StandupImg from "~/images/class-pathways/standup.png";
import OtherClassesImg from "~/images/class-pathways/other-classes.png";
---

<style lang="scss">
  // the purple blob behind the show section
  #interested-in-header::after {
    content: "";
    position: absolute;
    z-index: -9;
    inset: 0;
    top: -172px;
    background-color: #f2b63f;
    clip-path: xywh(0px 445px 80% 125px round 0px 100% 100% 0);
    transition: clip-path ease-in-out 300ms;
  }

  // the yellow blob behind the classes section
  #pathway-cards::after {
    content: "";
    position: absolute;
    z-index: -10;
    inset: 0;
    clip-path: xywh(0px 0px 100% 100% round 0px 25% 25% 0);
    background-color: #005f66;
    transition: clip-path ease-in-out 300ms;
    transform: scaleX(-1);
  }

  // lg tailwind viewport
  // reference: https://tailwindcss.com/docs/responsive-design
  @media (min-width: 1024px) {
    #interested-in-header::after {
      clip-path: xywh(0px 440px 50% 230px round 0px 100% 100% 0);
    }
    #pathway-cards::after {
      clip-path: xywh(0px 0px 100% 100% round 0px 45% 45% 0);
    }
  }
</style>

<RootLayout title="Classes" class="md:px-8 lg:px-16">
  <h1
    class="text-primary-purple text-6xl font-serif font-bold px-4 pt-8 pb-10 lg:pb-24 bg-shapes"
  >
    Catch a class
  </h1>
  <h2 id="interested-in-header" class="font-serif text-3xl font-bold pt-6 pl-4">
    I'm interested in...
  </h2>
  <ul
    id="pathway-cards"
    class="relative flex flex-col lg:flex-row gap-5 items-stretch pt-4 lg:pt-12 pb-16 lg:pb-64 lg:-right-16 lg:px-16"
  >
    <li>
      <PathwayCard
        image={UnlockingTheSelfImg}
        imageAlt="A group of happy and wacky improvisers!"
        description="Growing my personal skills and meeting people through improv"
        linkText="Explore Class"
        href="/classes/unlocking-the-self"
      />
    </li>
    <li>
      <PathwayCard
        image={PerformanceTrackImg}
        imageAlt="Four silly improvisers having fun on stage."
        description="Learning how to perform improv comedy"
        linkText="Explore Classes"
        href="/classes/performance-track"
      />
    </li>
    <li>
      <PathwayCard
        image={StandupImg}
        imageAlt="A woman killing it at her standup student showcase."
        description="Learning how to create and deliver stand-up comedy"
        linkText="Explore Classes"
        href="/classes/standup"
      />
    </li>
    <li>
      <PathwayCard
        image={OtherClassesImg}
        imageAlt="A collage of students graduating from various classes."
        description="Storytelling, acting classes, and more!"
        linkText="Explore Classes"
        href="/classes/other"
      />
    </li>
  </ul>
</RootLayout>
