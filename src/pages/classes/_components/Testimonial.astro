---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

type Props = {
  image: ImageMetadata;
  name: string;
};

const { image, name } = Astro.props;
---

<div class="flex flex-col items-center w-56 gap-8">
  <Image
    src={image}
    alt={`Headshot image of ${name}`}
    class="rounded-full aspect-square"
  />
  <blockquote class="text-center italic flex flex-col gap-4">
    <slot />
  </blockquote>
  <p>-{name}</p>
</div>
